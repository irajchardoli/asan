<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - آسان شهر</title>

    <link rel="stylesheet" href="~/css/site.min.css" />

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="navbar-brand">آسان شهر</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Estate" asp-action="Index">ملک</a></li>
                    <li><a asp-area="" asp-controller="Owner" asp-action="Index">مالک</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">

        <br />

        @RenderBody()


        <br />
        <br />
        <br />
        <hr />
        <footer>
            <p>&copy; 2020 - آسان شهر</p>
        </footer>
    </div>

    <script src="~/js/site.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
